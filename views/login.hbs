
{{> header }}

<h1>Connection</h1>

{{> show_flash_messages }}

<div class="alert alert-success" role="alert">
  <div class="row">
    <div class="col-sm-10">
      Merci de vous authentifier avec :
      <ul>
        <li>votre adresse email professionnelle "prenom.nom@lot.fr"</li>
        <li>votre mot de passe habituel</li>
      </ul>
      <a href="/GU_Disponibilités.pdf" target="_blank">Cliquez ici ou sur l'icône pour obtenir la documentation.</a></div>
    <div class="col-sm-2"><a href="/GU_Disponibilités.pdf" target="_blank"><img src="/img/icone-disponibilites.png" title="Documentation" /></a></div>
  </div>
</div>

<form class="form-horizontal" action="/login" method="post">

  <div class="row">&nbsp;</div>

  <div class="form-group">
    <label for="email_inp" class="col-md-2 control-label col-md-offset-2">Adresse Email</label>
    <div class="col-md-5">
      <input class="form-control" id="email_inp" type="text" name="username" placeholder="prenom.nom@lot.fr" required>
    </div>
  </div>

  <div class="form-group">
    <label for="pass_inp" class="col-md-2 control-label col-md-offset-2">Mot de passe</label>
    <div class="col-md-5">
      <input class="form-control" id="pass_inp" type="password" name="password" placeholder="mot de passe habituel" required>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-4 col-md-1">
      <button type="submit" class="btn btn-success" id="submit_login">Me Connecter</button>
    </div>
    <div class="col-md-4">
      
    </div>
  </div>

</form>

<div class="row">&nbsp;</div>


{{> footer }}
